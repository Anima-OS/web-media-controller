{
    "manifest_version": 2,
    "name": "Web Media Controller",
    "version": "0.3",
    "description": "__MSG_description__",

    "applications": {
        "gecko": {
            "id": "web-media-controller@f1u77y.me",
            "strict_min_version": "48.0",
            "update_url": "https://raw.githubusercontent.com/f1u77y/web-player-controller/master/extension/firefox-updates.json"
        }
    },

    "background": {
        "scripts": [
            "vendor/underscore-min.js",
            "vendor/require.js",
            "background.js"
        ],
        "persistent": true
    },

    "web_accessible_resources": [
        "vendor/underscore-min.js",
        "inject/*.js"
    ],

    "permissions": [
        "notifications",
        "nativeMessaging"
    ],

    "content_scripts": [{
        "matches": ["*://vk.com/*"],
        "js": [
            "vendor/underscore-min.js",
            "content/utils.js",
            "content/base-connector.js",
            "content/connect.js",

            "connectors/vk.js"
        ]
    }, {
        "matches": ["*://*.deezer.com/*"],
        "js": [
            "vendor/underscore-min.js",
            "content/utils.js",
            "content/base-connector.js",
            "content/connect.js",

            "connectors/deezer.js"
        ]
    }, {
        "matches": ["*://listen.moe/*"],
        "js": [
            "vendor/underscore-min.js",
            "content/utils.js",
            "content/base-connector.js",
            "content/connect.js",

            "connectors/listen.moe.js"
        ]
    }, {
        "matches": ["*://*.youtube.com/*"],
        "js": [
            "vendor/underscore-min.js",
            "content/utils.js",
            "content/base-connector.js",
            "content/connect.js",

            "connectors/youtube.js"
        ]
    }],

    "commands": {
        "_execute_page_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+U"
            }
        }
    },

    "update_url": "https://raw.githubusercontent.com/f1u77y/web-player-controller/master/extension/chromium-updates.xml",

    "default_locale": "en",

    "page_action": {}
}
