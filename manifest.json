{
    "manifest_version": 2,
    "name": "Web Media Controller",
    "version": "0.3",
    "description": "Allows controlling media player on different sites with Media Player widget on your desktop",

    "applications": {
        "gecko": {
            "id": "web-media-controller@f1u77y.me",
            "strict_min_version": "48.0"
        }
    },

    "background": {
        "scripts": [
            "vendor/underscore-min.js",
            "vendor/require.js",
            "background/requirejs-config.js",
            "background/background.js"
        ],
        "persistent": true
    },

    "web_accessible_resources": [
        "vendor/underscore-min.js",
        "content/vk-dom-inject.js"
    ],

    "permissions": [
        "tabs",
        "notifications",
        "storage",
        "nativeMessaging"
    ],

    "content_scripts": [
        {
            "matches": ["https://vk.com/*"],
            "js": [
                "vendor/underscore-min.js",
                "content/utils.js",
                "content/connector.js",
                "content/vk.js",
                "content/connect.js"
            ]
        }
    ],

    "page_action": {}
}
